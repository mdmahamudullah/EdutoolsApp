<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#006794"
    android:orientation="vertical"

    tools:context=".Registration">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new account:"
        android:textColor="#FFB300"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="italic"/>


    <EditText
        android:layout_marginTop="50sp"
        android:id="@+id/UserNameTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:textColorHint="#CDC3A9"
        android:textColor="#CDC3A9"
        android:hint="Full Name"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/EmailSignupEdittextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:textColorHint="#CDC3A9"
        android:textColor="#CDC3A9"
        android:inputType="textEmailAddress"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/phoneSignupEdittextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="phone"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:textColorHint="#CDC3A9"
        android:textColor="#CDC3A9"
        android:inputType="numberDecimal"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/PasswordSingUpEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password "
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:textColorHint="#CDC3A9"
        android:textColor="#CDC3A9"
        android:inputType="textWebPassword"
        android:textSize="25sp" />
    <EditText
        android:id="@+id/ConPasswordSingUpEditTextID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password "
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:textColorHint="#CDC3A9"
        android:textColor="#CDC3A9"
        android:inputType="textWebPassword"
        android:textSize="25sp" />

    <Button
        android:id="@+id/LoginButtonID"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:onClick="SingUPForNewUser"
        android:text="Signup"
        android:backgroundTint="#E1D59E"
        android:textColor="#2E4649"
        android:textSize="25sp" />

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Account?Log in here"
        android:textSize="15sp"

        android:onClick="BackToLogInPage"
        android:textAlignment="center"
        android:layout_marginBottom="70sp"
        android:textStyle="bold"/>

</LinearLayout>